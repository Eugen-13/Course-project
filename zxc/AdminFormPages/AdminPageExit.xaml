<Page x:Class="zxc.AdminFormPages.AdminPageExit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zxc.AdminFormPages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="630"
      Title="AdminPageExit">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,30">
            <Button Name="button" Style="{StaticResource RoundButton}"
                            Margin="0,0,0,0" FontStyle="Normal"
                            Foreground="White" BorderThickness="2"
                            BorderBrush="White" Width="300" IsDefault="True"
                            Height="60" Content="Выход" FontWeight="Normal" FontFamily="Segoe UI" FontSize="30" Click="Exit"/>
            <Button Name="button2" Style="{StaticResource RoundButton}"
                            Margin="0,50,0,0" FontStyle="Normal"
                            Foreground="White" BorderThickness="2"
                            BorderBrush="White" Width="300" IsDefault="True"
                            Height="60" Content="Сменить аккаунт" FontWeight="Normal" FontFamily="Segoe UI" FontSize="30" Click="Back"/>
        </StackPanel>
        
    </Grid>
</Page>
